{
	"name": "nobatki",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --bun vite dev --port 3002",
		"start": "node .output/server/index.mjs",
		"build": "vite build",
		"serve": "vite preview",
		"test": "vitest run",
		"format": "biome format --fix",
		"lint": "biome lint --fix",
		"check": "biome check",
		"machine-translate": "inlang machine translate --project project.inlang",
		"auth-generate": "bun --bun x @better-auth/cli generate",
		"db-start": "docker compose up --detach",
		"db-push": "bun drizzle-kit push",
		"db-generate": "bun drizzle-kit generate",
		"prepare": "husky"
	},
	"dependencies": {
		"@faker-js/faker": "^9.9.0",
		"@sentry/tanstackstart-react": "^9.41.0",
		"@t3-oss/env-core": "^0.13.8",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"@tanstack/electric-db-collection": "^0.0.14",
		"@tanstack/match-sorter-utils": "^8.19.4",
		"@tanstack/react-form": "^1.14.2",
		"@tanstack/react-query": "^5.83.0",
		"@tanstack/react-query-devtools": "^5.83.0",
		"@tanstack/react-router": "^1.129.8",
		"@tanstack/react-router-devtools": "^1.129.8",
		"@tanstack/react-router-with-query": "^1.129.8",
		"@tanstack/react-start": "^1.129.8",
		"@tanstack/react-table": "^8.21.3",
		"@tanstack/router-plugin": "^1.129.8",
		"@untitledui/icons": "^0.0.19",
		"better-auth": "^1.3.3",
		"drizzle-orm": "^0.44.3",
		"drizzle-valibot": "^0.4.2",
		"input-otp": "^1.4.2",
		"react": "^19.1.0",
		"react-aria-components": "^1.10.1",
		"react-dom": "^19.1.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.11",
		"tailwindcss-animate": "^1.0.7",
		"tailwindcss-react-aria-components": "^2.0.0",
		"uuid": "^11.1.0",
		"valibot": "^1.1.0",
		"zod": "^4.0.9"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@inlang/cli": "^3.0.0",
		"@inlang/paraglide-js": "2.2.0",
		"@tailwindcss/postcss": "^4.1.11",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/react": "^16.3.0",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.7.0",
		"drizzle-kit": "^0.31.4",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.2",
		"postcss": "^8.5.6",
		"postgres": "^3.4.7",
		"typescript": "^5.8.3",
		"vite": "6",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4",
		"web-vitals": "^5.0.3"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --files-ignore-unknown=true",
			"biome check --write --no-errors-on-unmatched",
			"biome check --write --organize-imports-enabled=false --no-errors-on-unmatched",
			"biome check --write --unsafe --no-errors-on-unmatched",
			"biome format --write --no-errors-on-unmatched",
			"biome lint --write --no-errors-on-unmatched"
		]
	}
}
